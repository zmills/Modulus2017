<?xml version="1.0" encoding="utf-8"?>
<!--***************************************************************************
* NOTES
* AnnouncementsFragmentLayout.xml
* 
* Any container's/layout's top, left, and right padding should be set to size
* desired.
* Adjust the container's bottom padding based on its views' bottom padding.
* Views within the container should match_parent in width and will set its own
* bottom margin to separate content.
*
****************************************************************************-->
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SwipeRefreshAnnouncements"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/AnnouncementsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:scrollbars="vertical"
        />
        <!-- android:paddingBottom allows the last card to be visible and not be cut
             off by the bottom navigation bar -->
        <!-- android:clipToPadding="false" helps to set the padding properly -->
        <!-- xmlns:tools="http://schemas.android.com/tools"
             tools:context=".mainActivity" //We can also set the context here -->
</android.support.v4.widget.SwipeRefreshLayout>
