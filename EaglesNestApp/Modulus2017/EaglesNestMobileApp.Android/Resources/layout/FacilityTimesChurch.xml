<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- TOOLBAR -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/ToolbarDialogLayout"
        />

    <!-- SCROLLVIEW -->
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >

            <!-- ********************************************************************** -->
            <!-- CARD SEPARATOR -->
            <!-- ********************************************************************** -->
            <!-- 2. Video Church BUILDING -->

            <!-- Video Church Building Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Church Services"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                      />

            <!-- Church Facilities Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                      >

                <!-- Church Facilities Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                          >

                    <!-- Crowne Centre Button -->
                    <Button
                        android:id="@+id/CrowneCentre"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Crowne Centre"
                        android:gravity="left"
                              />
                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/CrowneCentreTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sun" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sun" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Wed" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   10:15 a.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   6 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   7 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- ********************************************************************** -->
            <!-- CARD SEPARATOR -->
            <!-- ********************************************************************** -->
            <!-- 2. Video Church BUILDING -->

            <!-- Video Church Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Video Church"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                      />

            <!-- Video Church Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                      >

                <!-- Video Church Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                          >

                    <!-- Sunday Morning Service Button -->
                    <Button
                        android:id="@+id/SundayMorningService"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Sunday Morning Service"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/SundayMorningServiceTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sat" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   12:45 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Sunday Evening Service Button -->
                    <Button
                        android:id="@+id/SundayEveningService"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Sunday Evening Service"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/SundayEveningServiceTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sat" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   2 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Wednesday Evening Service Button -->
                    <Button
                        android:id="@+id/WednesdayEveningService"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Wednesday Evening Service"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/WednesdayEveningServiceTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sat" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   3:15 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>