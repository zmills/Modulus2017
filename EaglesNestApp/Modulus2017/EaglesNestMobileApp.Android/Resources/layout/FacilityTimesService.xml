<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- TOOLBAR -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/ToolbarDialogLayout"
        />

    <!-- SCROLLVIEW -->
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >

            <!-- ********************************************************************** -->
            <!-- CARD SEPARATOR -->
            <!-- ********************************************************************** -->
            <!-- 2. Commons BUILDING -->

            <!-- Commons Building Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Commons"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                      />

            <!-- Commons Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                      >

                <!-- Commons Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                          >

                    <!-- Commons General Button -->
                    <Button
                        android:id="@+id/CommonsGeneral"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Commons General"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/CommonsGeneralTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sun" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sun" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Wed" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sat" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   11:15 a.m.–5:30 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   7 p.m.–10:15 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   7 a.m.–10:15 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   closed 6:30 p.m.–8 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   9 a.m.–10:15 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Post Office Button -->
                    <Button
                        android:id="@+id/PostOffice"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Post Office"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/PostOfficeTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sat" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   7:30 a.m.–5:15 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   3 a.m.–5 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- ********************************************************************** -->
            <!-- CARD SEPARATOR -->
            <!-- ********************************************************************** -->
            <!-- 2. Academic Center BUILDING -->

            <!-- Academic Center Building Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Academic Center"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                      />

            <!-- Academic Center Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                      >

                <!-- Academic Center Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                          >

                    <!-- Information Desk Button -->
                    <Button
                        android:id="@+id/InformationDesk"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Information Desk"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/InformationDeskTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sun" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sat" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   8:30 a.m.–10:15 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   7:30 a.m.–10:15 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   8:30 a.m.–10:15 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Records Office Button -->
                    <Button
                        android:id="@+id/RecordsOffice"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Records Office"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/RecordsOfficeTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   7:30 a.m.–4:30 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Student Activities Button -->
                    <Button
                        android:id="@+id/StudentActivities"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Student Activities"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/StudentActivitiesTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   8 a.m.–4:45 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Student Care Button -->
                    <Button
                        android:id="@+id/StudentCare"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Student Care"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/StudentCareTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   8 a.m.–4:45 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Student Employement Button -->
                    <Button
                        android:id="@+id/StudentEmployment"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Student Employement"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/StudentEmployementTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   1:30 p.m.–4:30 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Student Life Button -->
                    <Button
                        android:id="@+id/StudentLife"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Student Life"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/StudentLifeTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   8 a.m.–4:45 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- ********************************************************************** -->
            <!-- CARD SEPARATOR -->
            <!-- ********************************************************************** -->
            <!-- 2. Graf Clinic BUILDING -->

            <!-- Graf Clinic Building Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Graf Clinic"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                      />

            <!-- Graf Clinic Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                      >

                <!-- Graf Clinic Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                          >

                    <!-- Graf Clinic Button -->
                    <Button
                        android:id="@+id/GrafClinic"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Graf Clinic"
                        android:gravity="left"
                              />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/GrafClinicTimes"
                        style="@style/ModTimesContainer">

                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sun" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sat" />
                        </LinearLayout>

                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   7:30 a.m.–9:30 a.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   7:30 a.m.–4:30 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   7:30 a.m.–10:30 a.m." />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>