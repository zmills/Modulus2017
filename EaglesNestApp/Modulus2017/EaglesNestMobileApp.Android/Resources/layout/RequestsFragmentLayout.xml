<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/SwipeRefreshStudentPass"
   android:layout_width="match_parent"
   android:layout_height="match_parent">


  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


    <Button
    android:id="@+id/createNewPass"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Create a New Pass"
    
    />
    <TextView
      android:id="@+id/approvedRequests"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Approved Requests"
      android:gravity="center_horizontal"
      android:textSize="30dp"
     />

    <View
      style="@style/ModTextViewUnderline"
    />


    <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       cardview:cardElevation="4dp"
       cardview:cardCornerRadius="5dp"
       android:id="@+id/approvedPassesCard"
       android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

      <TextView
        android:id="@+id/approvedPassesStatus"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="No current approved passes"
        android:textSize="20dp"
        android:padding="4dp"
        />
    </android.support.v7.widget.CardView>

      <TextView
      android:id="@+id/pendingRequests"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Pending Requests"
      android:gravity="center_horizontal"
      android:textSize="30dp"
      
     />

    <View
      style="@style/ModTextViewUnderline"
    />

    <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       cardview:cardElevation="4dp"
       cardview:cardCornerRadius="5dp"
       android:id="@+id/pendingPassesCard"
       android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

      <TextView
        android:id="@+id/pendingPassesStatus"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="No current pending passes"
        android:textSize="20dp"
        android:padding="4dp"
        />
    </android.support.v7.widget.CardView>


  </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
