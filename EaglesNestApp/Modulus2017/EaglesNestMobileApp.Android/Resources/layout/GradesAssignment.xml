<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <!-- Divider Line -->
    <View style="@style/ModDivider" />

    <!-- GRADE ASSIGNMENTS & SCORES  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:weightSum="3"
        android:padding="16dp"
        android:orientation="horizontal"
        >

        <!-- ASSIGNMENT DATA -->
        <TextView
            android:id="@+id/AssignmentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quiz #5 (Ch-2)"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingRight="8dp"
            style="@style/ModRobotoRegular13"
            />

        <!-- DATE DATA -->
        <TextView
            android:id="@+id/AssignmentDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3/30/2017"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="8dp"
            style="@style/ModRobotoRegular13"
            />

        <!-- GRADE SCORE DATA -->
        <TextView
            android:id="@+id/AssignmentGrade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9/10 pts. (90%)"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="8dp"
            style="@style/ModRobotoRegular13"
            />

    </LinearLayout>

</LinearLayout>