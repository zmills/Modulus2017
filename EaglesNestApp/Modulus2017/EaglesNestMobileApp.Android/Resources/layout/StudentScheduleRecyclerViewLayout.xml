<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
    card_view:cardUseCompatPadding="false"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp"
    android:layout_marginBottom="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            >

            <TextView
                android:layout_height="match_parent"
                android:layout_width="96dp"
                android:text="8:00 - 8:50"
                android:background="?attr/modNicksCard"
                style="@style/ModRobotoRegular20"
                android:textColor="@color/accent"
                android:padding="16dp"
                android:gravity="center"
                android:id="@+id/studentScheduleEventTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/modCardBackgroundColor"
                android:layout_toRightOf="@+id/studentScheduleEventTime"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Event Title"
                    style="@style/ModListItemPrimaryText"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:id="@+id/studentScheduleEventTitle"
                    />

                <TextView
                    style="@style/ModListItemSecondaryText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Event location"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:id="@+id/studentScheduleEventDescription"
                    />
            
            </LinearLayout>
        
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>