<?xml version="1.0" encoding="utf-8" ?>
  <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/exam_time_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardBackgroundColor="?attr/modCardBackgroundColor"
        cardview:cardElevation="2dp"
        cardview:cardUseCompatPadding="false"
        android:layout_marginBottom="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="8dp"
            >
            
            <!-- COURSE NAME -->
            <TextView
                android:id="@+id/examClassName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="0dp"
                style="@style/ModRobotoMedium20"
                android:layout_marginBottom="8dp"
                />

            <View style="@style/ModDivider"/>

            <!--<TextView
                android:id="@+id/examClassNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ModRobotoMedium20"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/examClassName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/ModRobotoRegular16"
                />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:id="@+id/examDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue. May 1"
                    style="@style/ModRobotoRegular16"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/examTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    style="@style/ModRobotoRegular16"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/examRoomLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ModRobotoRegular16"
                    android:layout_weight="1"
                    android:gravity="right"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>