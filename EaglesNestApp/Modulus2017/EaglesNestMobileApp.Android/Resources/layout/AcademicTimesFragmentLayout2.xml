<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/ToolbarDialogLayout"
        />
    
    <!-- SCROLLVIEW -->
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >
            
<!-- ********************************************************************** -->
<!-- CARD SEPARATOR -->       
<!-- ********************************************************************** -->

            <!-- 1. ACADEMIC CENTER -->

            <!-- Academic Center Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Academic Center"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                />
            
            <!-- Academic Center CardView -->
            <android.support.v7.widget.CardView
                android:id="@+id/StudentInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                >

                <!-- Academic Center Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <!-- Classrooms Button -->
                    <Button
                        android:id="@+id/ACClassrooms"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Classrooms"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!--<TextView
                        android:id="@+id/ACClassroomsData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="M–F	7:30 a.m.–5 p.m."
                        />-->

                    <!-- Computer/Education Labs, Media Room Button -->
                    <Button
                        android:id="@+id/ACLabs"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Computer/Education Labs, Media Room"
                        android:gravity="left"
                        />

                    <!-- Times Container -->
                    <LinearLayout android:id="@+id/ACLabsTimes"
                        style="@style/ModTimesContainer">
                        
                        <!-- Day of Week Data -->
                        <LinearLayout style="@style/ModDayOfWeekDataContainer">
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="M-F" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="W" />
                            <TextView style="@style/ModDayOfWeekData"
                                android:text="Sat" />
                        </LinearLayout>
                        
                        <!-- Times Data -->
                        <LinearLayout style="@style/ModTimesDataContainer">
                            <TextView style="@style/ModTimesData"
                                android:text="   7:30 a.m.–10 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   closed 6:30–8:15 p.m." />
                            <TextView style="@style/ModTimesData"
                                android:text="   8:30 a.m.–10 p.m." />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Seminary Library Button -->
                    <Button
                        android:id="@+id/ACSeminaryLibrary"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Seminary Library"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Library Button -->
                    <Button
                        android:id="@+id/ACLibrary"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Library"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Skype Button -->
                    <Button
                        android:id="@+id/ACSkype"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Skype"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Testing Center Button -->
                    <Button
                        android:id="@+id/ACTestingCenter"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Testing Center—3rd Fl"
                        android:gravity="left"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

<!-- ********************************************************************** -->
<!-- CARD SEPARATOR -->       
<!-- ********************************************************************** -->
            <!-- 2. MACKENZIE BUILDING -->

            <!-- MacKenzie Building Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="MacKenzie Building"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                />
            
            <!-- MacKenzie Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                >

                <!-- MacKenzie Building Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <!-- Classrooms Button -->
                    <Button
                        android:id="@+id/MKClassrooms"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Classrooms, 1–6 Fls"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />
                    
                    <!-- Classrooms Button -->
                    <Button
                        android:id="@+id/MKLabs"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Nursing/Computer Lab, 3rd and 5th Fls"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Classrooms Button -->
                    <Button
                        android:id="@+id/MKPlanetarium"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Planetarium, 6th Fl"
                        android:gravity="left"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

<!-- ********************************************************************** -->
<!-- CARD SEPARATOR -->
<!-- ********************************************************************** -->
            
            <!-- 3. VISUAL & PERFORMING ARTS BUILDING -->

            <!-- VPA Building Title -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/ModRobotoRegularSoft20"
                android:text="Visual and Performing Arts"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                />

            <!-- VPA Building CardView -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/modCardBackgroundColor"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                >

                <!-- VPA Building Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <!-- Classrooms Button -->
                    <Button
                        android:id="@+id/VPAClassrooms"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Classrooms and Upper/Lower Art Galleries"
                        android:gravity="left"
                        />

                    <!-- Divider Line -->
                    <View style="@style/ModDivider" />

                    <!-- Practice Rooms Button -->
                    <Button
                        android:id="@+id/VPAPracticeRooms"
                        android:textColor="?attr/modBorderlessButtonFullSpanColor"
                        style="@style/ModBorderlessButtonFullSpan"
                        android:text="Practice Rooms"
                        android:gravity="left"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>